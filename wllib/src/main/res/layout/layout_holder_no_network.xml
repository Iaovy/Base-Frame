<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_holder_top"
        android:layout_width="@dimen/font_56"
        android:layout_height="@dimen/font_56"
        android:src="@drawable/img_no_network" />

    <TextView
        style="@style/text_title"
        android:layout_width="160dp"
        android:layout_marginTop="@dimen/padding_16"
        android:gravity="center"
        android:text="网络不可用, 请检查您的网络配置" />

    <TextView
        style="@style/text_worst"
        android:layout_marginTop="@dimen/padding_4"
        android:text="点击界面重试" />

    <TextView
        android:id="@+id/btn_goto_net"
        style="@style/text_minor"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/padding_8"
        android:background="@drawable/draw_blue_grey_r2"
        android:drawableRight="@drawable/draw_arrow_right_sel"
        android:drawablePadding="@dimen/padding_4"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_8"
        android:text="去网络设置"
        android:textColor="@color/col_blue_grey_2_white"
        tools:textColor="@color/md_blue_grey_500" />

</LinearLayout>